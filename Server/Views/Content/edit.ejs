<div class="container ">
  <h1 class="col-lg-6 col-md-10 col-sm-10 vh-100 d-flex align-content-center py-0  flex-wrap"><%= title %> Game</h1>
  <hr>
  <div id="messageArea"></div>

  <div class="row justify-content-lg-center g-3 ">
    <form method="post" class="col-lg-6 col-md-10 col-sm-10">

      <div class="input-group mb-3">
        <span class="input-group-text">Game Name</span>
        <input id="gameName" name="gameName" type="text" class="form-control" 
        value="<%= game.name %>"
        aria-label="Game Name" aria-describedby="Movie Name Input" required>
      </div>

      <div class="input-group mb-3">
          <span class="input-group-text">Game Type</span>
          <input id="gameType" name="gameType" type="text" class="form-control" 
          value="<%= game.gameType %>"
          aria-label="Game Type" aria-describedby="Movie Director Input" required>
        </div>

      <div class="input-group mb-3">
      <span class="input-group-text">Location</span>
      <input id="location" name="location" type="text" class="form-control" 
      value="<%= game.location %>"
      aria-label="location" aria-describedby="Movie Year Input" required>
      </div>

   
      
      <% if(title == "Edit") { %>
      <button id="editButton" type="submit" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
      <% } else {%>
      <button id="addButton" type="submit"  class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
      <% } %>  

      <a href="/administrator" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</a>
    
    </form>

  </div>
</div>
