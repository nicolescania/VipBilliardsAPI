
<div class="container">
    <h1>Games List</h1>

    <div class="row vh-100 d-flex align-content-center py-0  flex-wrap">
        <div class="col">


 
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
             

                <th scope="col">Name</th>
                <th scope="col">Game Type</th>
                <th scope="col">Location</th>
                <th></th>
                <th></th>

     
               
            </tr>
        </thead>
        <tbody id="booksList">
            <!-- Repeatable Rows -->
            <% games.forEach((game) => { %>
                <!-- Create a new Table Row-->
           

             <tr>
               
                <td><%= game.name %></td>
                <td><%= game.gameType.name %></td>
                <td><%= game.location %></td>
                <td class="text-center"><a href="/edit/<%= game._id %>" class="btn btn-primary btn-sm edit"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
                <td class="text-center"><a href="/delete/<%= game._id %>" class="btn btn-danger btn-sm delete"><i class="fa-solid fa-trash-can"></i> Delete</a></td>


             </tr>
              
             
    
                <% }); %>
      
        </tbody>
    </table>
</div>
</div>
</div>

